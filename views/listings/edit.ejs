
<% layout("/layouts/boilerplate")%>
    <body>
        <h3>Edit</h3>
        <div class="row mt-3">
            <div class="col-md-8">
        <form method="post" novalidate class="needs-validation" action="/listings/<%=listings._id%>?_method=PUT" enctype="multipart/form-data">
            <div class="mb-3">
                <lable for="title" class="form-label">Title</lable>
                <input name="title" value="<%=listings.title%>" class="form-control" required>
                <div class="valid-feedback">Titl√® looks good</div>
            </div>

            <div class="mb-3">
                <lable for="description" class="form-label">Description</lable>
                <textarea name="description" type="text" class="form-control" required> <%=listings.description%> </textarea>
                <div class="valid-feedback">Description looks good</div>
            </div>
            <div class="col-md-4">Original Listing Image
                <br>
                <img src="<%=listings.image.url%>" style="width: 100px;height:100px"/>
            </div>
            <div class="mb-3">
                <lable for="image" class="form-label">Upload New Image</lable>
                <input name="image" value="<%=listings.image%>" type="file" class="form-control" >
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <lable for="price" class="form-label">Price</lable>
                    <input name="price" value="<%=listings.price%>" type="number" class="form-control" required>
                </div>
                <div class="mb-3 col-md-6">
                    <label for="location" class="form-label">Location</label>
                    <input name="location" value="<%=listings.location%>" type="text" class="form-control" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input name="country" value="<%=listings.country%>" type="text" class="form-control" required>
            </div>

            <button class="btn btn-danger">update</button>
        </form>
    </div>
    </div>
    </body>