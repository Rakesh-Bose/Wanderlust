<% layout("/layouts/boilerplate")%>

    <body>

        <div class="row col-md-12">
            <div class="col-8 offset-2">
                <H1>
                    <%=listings.title%>
                </H1>
            </div>
            <div class="col-4 offset-2">
                <div class="card listing-card">
                    <img src="<%=listings.image.url%>" class="card-img-top show-image" alt="listing_image" />
                    <div class="card-body">
                        <p class="card-text">
                            <%=listings.details%>
                        </p>
                        <p class="card-text">
                            <i>owned By:-</i>
                            <%=listings.owner.username%>
                        </p>
                        <p class="card-text">
                            <%=listings.description%>
                        </p>
                        <p class="card-text">
                            &#8377;<%=listings.price.toLocaleString("en-IN")%>
                        </p>
                        <p class="card-text">
                            <%=listings.location%>
                        </p>
                        <p class="card-text">
                            <%=listings.country%>
                        </p>
                        <p class="card-text">

                        </p>


                    </div>
                   
                    <div class="card-bottom ">
                        <a href="/listings/<%=listings._id%>/edit" class="btn btn-primary ">Edit this listing</a>

                        <form method="post" action="/listings/<%=listings._id%>?_method=DELETE">
                            <button class="btn btn-danger offset-2">Delete</button>
                        </form>
                    </div>
                    
                    <hr>
                    <%if(curruser){%>
                    <div class="col-12 mt-3 offset-2 ">
                        <h4>leave a review</h4>
                        <form method=post action="/listings/<%=listings._id%>/reviews" novalidate
                            class="needs-validation">
                            <div class="mb-3">
                                <lable for="comment" class="form-label">Comment</lable>
                                <textarea name="comment" placeholder="enter review" type="text" class="form-control"
                                    cols="10" rows="10" required></textarea>
                                <div class="invalid-feedback">please add for review</div>

                            </div>
                            
                            <fieldset class="starability-slot">
                                
                                <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="1" checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="rating" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="rating" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="rating" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="rating" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="rating" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                                <div class="invalid-feedback">please add star review</div>
                              </fieldset>
                            <button class="btn btn-danger offset-2">submit</button>
                        </form>
                    </div>
                    <%}%>
                     <hr>
                     <h4>All reviews</h4>
                     <div class="row">
                     <% for(review of listings.reviews){ %>
                        <div class="card col-5 ms-3 mb-3">
                            <div class="card-body ">
                           <h5 class="card-title"><%=review.author.username%></h5>
                           <p class="starability-result card-text" data-rating="<%=review.rating%>">
                        </p>
                           <p class="card-text "> <%=review.comment%></p>
                           
                        </div>
                        <form class="mb-3" method="post" action="/listings/<%=listings._id%>/reviews/<%=review._id%>?_method=DELETE">
                            <button class="btn btn-dark ">Delete</button>
                        </form>
                    </div>
                     <%}%>
                    </div>
                </div>
            </div>
        </div>

        </div>



        </div>
    </body>